<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
   
    >

    <LinearLayout
        android:id="@+id/modify_passwd_layout"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"  
        android:background="#ff5a54"
        android:layout_width="fill_parent">
         <TextView  
            android:layout_width="0dp"  
            android:layout_height="match_parent"  
            android:layout_weight="1"  
            android:gravity="center"  
            android:text="修改手机号"  
            android:textStyle="bold"  
            android:textSize="20sp"  
            android:textColor="@android:color/white"/>      
    </LinearLayout>
    
    
    
    
    
    
    
    
    
    
    <EditText
        android:id="@+id/user_pwd"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"        
        android:hint="输入密码"
        android:layout_below="@id/modify_passwd_layout"
        android:layout_alignRight="@+id/resetpwd_edit_name"
        android:layout_alignEnd="@+id/resetpwd_edit_name"
        android:layout_alignLeft="@+id/resetpwd_edit_name"
        android:layout_alignStart="@+id/resetpwd_edit_name" />
    

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:text="取消"
        android:id="@+id/resetphone_btn_cancel"
        android:textSize="20dp"
        android:onClick="not_to_reset"
        android:background="@drawable/login_register_bg"
        android:layout_below="@+id/resetphone_btn_sure"
       
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/reset_phone"
        android:layout_below="@+id/user_pwd"
        android:layout_centerHorizontal="true"
        android:hint="输入新手机号"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:id="@+id/resetphone_btn_sure"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:onClick="sure_to_reset"
        android:background="@drawable/android_title_bg"
        android:layout_marginTop="92dp"
        android:layout_below="@+id/reset_phone"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
         />

    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/reset_phone_check"
        android:hint="确认新手机号"
        android:layout_below="@+id/reset_phone"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
         />

</RelativeLayout>
